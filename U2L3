n = 0
r = 0
l = 1

while r<22: 
  n = n+1
  r = r+n
  
  if l > 3:
    end = "th"
    print ("The", str(l) + "th", "triangular number is", r)
    
  elif l == 3:
    print ("The", str(l) + "rd",  "triangular number is", r,) 
    
  elif l == 2:
    print ("The",str(l) + "nd", "triangular number is", r) 
    
  else:
    print ("The 1st triangular number is", r) 
    
  l = 1+l
